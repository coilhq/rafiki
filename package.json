{
  "name": "@interledger/rafiki",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": "https://github.com/interledger/rafiki",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "lint": "eslint --max-warnings=0 --fix .",
    "format": "prettier --write . && pnpm lint",
    "format:docs": "prettier --write ./docs/**/*.md",
    "checks": "pnpm check:prettier && pnpm check:lint",
    "check:lint": "eslint --max-warnings=0 .",
    "check:prettier": "prettier --check .",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "build": "tsc --build",
    "network:create": "docker network create --driver=bridge --subnet=10.5.0.0/24 --gateway=10.5.0.1 rafiki",
    "network:remove": "docker network remove rafiki",
    "cloud-nine-wallet": "docker compose -f ./infrastructure/local/cloud-nine-wallet/docker-compose.yml",
    "happy-life-bank": "docker compose  -f ./infrastructure/local/happy-life-bank/docker-compose.yml",
    "tigerbeetle": "docker compose -f ./infrastructure/local/tigerbeetle/docker-compose.yml --env-file ./infrastructure/local/tigerbeetle/.env.tigerbeetle",
    "localenv:build": "pnpm tigerbeetle build && pnpm cloud-nine-wallet build && pnpm happy-life-bank build",
    "localenv:start": "pnpm network:create && pnpm tigerbeetle up -d && pnpm cloud-nine-wallet up -d && pnpm happy-life-bank up -d",
    "localenv:stop": "pnpm happy-life-bank down && pnpm cloud-nine-wallet down && pnpm tigerbeetle down && pnpm network:remove",
    "localenv:dbvolumes:remove": "docker volume rm cloud-nine-wallet_database-data && docker volume rm tigerbeetle_tigerbeetle-data",
    "localenv:psql:build": "pnpm cloud-nine-wallet build && pnpm happy-life-bank build",
    "localenv:psql:start": "pnpm network up -d && pnpm cloud-nine-wallet up -d && pnpm happy-life-bank up -d",
    "localenv:psql:stop": "pnpm cloud-nine-wallet down && pnpm happy-life-bank down && pnpm network down",
    "localenv:psql:dbvolumes:remove": "docker volume rm cloud-nine-wallet_database-data",
    "localenv:seed:auth": "pnpm -C ./packages/auth knex seed:run --env=development && pnpm -C ./packages/auth knex seed:run --env=peerdevelopment",
    "sanity": "pnpm -r build && pnpm -r test",
    "docs": "graphql-markdown --update-file ./docs/admin-api.md --heading-level 2 ./packages/backend/src/graphql/schema.graphql"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@jest/types": "^29.4.3",
    "@swc/core": "^1.3.37",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "graphql-markdown": "^7.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependenciesMeta": {
    "tigerbeetle-node": {
      "built": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "none"
  }
}
