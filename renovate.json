{
  "enabled": true,
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prConcurrentLimit": 1,
  "branchConcurrentLimit": 0,
  "branchPrefix": "renovate-",
  "prHourlyLimit": 1,
  "rebaseWhen": "conflicted",
  "rangeStrategy": "bump",
  "prCreation": "not-pending",
  "includeForks": true,
  "docker": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackageNames": ["@types/node", "node"],
      "allowedVersions": "<17.0.0"
    }
  ]
}
