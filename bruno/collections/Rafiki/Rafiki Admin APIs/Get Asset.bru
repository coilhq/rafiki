meta {
  name: Get Asset
  type: graphql
  seq: 3
}

post {
  url: {{RafikiGraphqlHost}}/graphql
  body: graphql
  auth: none
}

body:graphql {
  query GetAsset($id: String!) {
      asset(id: $id) {
      code
      createdAt
      id
      scale
      withdrawalThreshold
      liquidityThreshold
      sendingFee {
          id
          type
          basisPoints
          fixed
      }
      receivingFee {
          id
          type
          basisPoints
          fixed
      }
    }
  }
}

body:graphql:vars {
  {
      "id": "{{assetId}}"
  }
}
