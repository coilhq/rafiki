{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm scss && remix build",
    "dev": "PORT=3005 remix dev",
    "start": "PORT=3005 remix-serve build",
    "scss": "node-sass app/styles -o app/styles/dist && node-sass app/components -o app/styles/dist",
    "lint": "npx eslint --fix app/",
    "format": "prettier --write app/ && pnpm lint",
    "checks": "pnpm check:prettier && pnpm check:lint",
    "check:lint": "npx eslint app/",
    "check:prettier": "prettier --check app/"
  },
  "dependencies": {
    "@apollo/client": "^3.7.5",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "graphql": "^16.6.0",
    "ilp-packet": "3.1.4-alpha.1",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@types/graphql": "^14.5.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.1",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "none"
  }
}
